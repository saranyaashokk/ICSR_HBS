@model DataLayer.ViewModels.login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    @*@Scripts.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/base/jquery-ui.css")*@


    @*@Scripts.Render("http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js")
        @Scripts.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js")*@

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/business-casual.css")" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @*<script>
            $().ready(function () {
                $('.datepicker').datepicker();
            })
        </script>*@


</head>

<body>

@using (Html.BeginForm("login", "Login", FormMethod.Post))
{


    <div class="brand" style="padding-top:8%">HBS ICSR</div>
    @*<div class="address-bar">Hall Booking System | Industrial Consultancy And Sponsored Research | IIT Madras</div>*@

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Business Casual</a>
            </div>
        </div>
    </nav>


    <div class="container text-center" style="width:35%">
        <div class="row" id="dv_login">
            <div class="box">
                <hr>
                <h2 class="intro-text text-center">
                    <strong> Login </strong>
                </h2>
                <hr />

                <br />

                @*User Name*@

                <div class="col-lg-5" style="font-weight:bold; padding-left:30%; width:70%">
                    @Html.TextBoxFor(m => m.userName, new
               {
                   @placeholder = Html.DisplayNameFor(m => m.userName),
                   @class = "form-control",
                   id = "txtFromDate",
                   style = "background:no-repeat; "
               })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>

                <br />
                <br />
                <br />
                @*Password*@

                <div class="col-lg-5" style="font-weight:bold; padding-left:30%; width:70%">
                    @Html.TextBoxFor(m => m.passWord, new
               {
                   @placeholder = Html.DisplayNameFor(m => m.passWord),
                   @class = "form-control",
                   id = "txtFromDate",
                   style = "background:no-repeat; "
               })
                    @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                </div>

                <br /><br /><br />

                <div>

                    <input type="submit" id="btnLogin" class="btn btn-default btn-lg" 
                           style="background-color:bisque; color:black; height:34px; text-align:center; line-height: 0.7; width: 25%" value="Login" />
                </div>


            </div>
        </div>
    </div>

}

    <footer>
        <div class="col-lg-12 text-center">
            <p>
                Copyright &copy; ICSR(IITM)  <span>
                    <script>document.write(new Date().getFullYear())</script>
                    . All rights reserved .
                </span>
            </p>

        </div>
    </footer>
    @*<script src="~/Scripts/jquery-1.12.4.min.js" type="text/javascript" ></script>*@
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

    @*<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>*@
    <script src="~/Scripts/jquery-ui-1.12.1.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap.js")"></script>
    <script src="~/Scripts/notify.min.js"></script>

</body>

</html>
