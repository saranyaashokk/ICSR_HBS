                        "data": "start_date", "autowidth": true,
                        "render": function (d) {
                            if (d == null)
                                return "";
                            var milli = d.replace(/\/Date\((-?\d+)\)\//, '$1');
                            var dt = new Date(parseInt(milli));
                            return (dt.getDate() + '/' + (dt.getMonth() + 1) + '/' + dt.getFullYear() + ' | ' + dt.toLocaleTimeString());
                        }
                    },
                    {
                        "data": "end_date", "autowidth": true,
                        "render": function (d) {
                            if (d == null)
                                return "";
                            var milli = d.replace(/\/Date\((-?\d+)\)\//, '$1');
                            var dt = new Date(parseInt(milli));
                            return (dt.getDate() + '/' + (dt.getMonth() + 1) + '/' + dt.getFullYear() + ' | ' + dt.toLocaleTimeString());
                        }
