        $(document).ready(function () {

            var start_datee = $("#txtFromDate").val();
            var end_datee = $("#txtToDate").val();

            var table = $('#tbl_bookings').DataTable({
                "ajax": {
                    "url": "/ViewBookings/GetData",
                    "type": "GET",
                    data: {
                        'start': start_datee,
                        'end': end_datee
                    }
                    //"datatype": "json"
                },
