        function ViewDetails(reservationId) {
            $("#dialog").dialog({
                autoOpen: false,
                modal: true,
                title: "View Details"
            });

            //var customerId = $(this).closest("tr").find("td").eq(0).html();
            $.ajax({
                type: "POST",
                type: "POST",
                url: '@Url.Action("Res_Info_popup", "ViewBookings",new { area=""})',
                data: { iBooking_id: reservationId },
                dataType: "html",
                success: function (response) {
                    $('#dialog').html(response);
                    $('#dialog').dialog('open');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }



        function Delete(reservationId) {
            if (confirm('Are you sure , you want to delete this booking ?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "ViewBookings",new { area=""})',
                data: { iBooking_id: reservationId },

                success: function (data) {
                    if (data.success) {

                        $('#tbl_bookings').DataTable().ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                }
            });
        }
    }
       function Approve(reservationId) {
        if (confirm('Are you sure , you want to Approve this booking ?'))
        {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Approve", "ViewBookings",new { area=""})',
                data: { iBooking_id:reservationId},
                success: function (data) {
                    if (data.success) {

                        $('#tbl_bookings').DataTable().ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                    else
                    {
                        //alert('failure')
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        })
                    }
                }
            });
        }
        }

        $(function () {
            //From Date
            $("#txtFromDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy',
                //minDate: 0,
                //maxDate: "+1Y",
                onSelect: function (selected) {
